# TalePick Environment Variables Example
# Copy this file to .env.local in each app directory (apps/frontend/.env.local, apps/admin/.env.local)

# Google Generative AI API Key for story generation
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# MongoDB Database Connection
# Default Docker setup: mongodb://root:example@localhost:27017/talepick?authSource=admin
# For production, replace with your MongoDB connection string
MONGODB_URL=mongodb://root:example@localhost:27017/talepick?authSource=admin

# API Configuration
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
API_LOG_LEVEL=info

# Database Configuration
DB_CONNECTION_TIMEOUT_MS=5000
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2

# Application Configuration
NODE_ENV=development
PORT=3000
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_long
JWT_EXPIRES_IN=24h

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_CORS=false

# Optional: CORS Configuration (only needed if ENABLE_CORS=true)
API_CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ADMIN_ALLOWED_ORIGINS=http://localhost:3001

# Optional: Next.js Configuration
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your_nextauth_secret_here