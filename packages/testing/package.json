{
  "name": "@talepick/testing",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "find src -name '*.ts' 2>/dev/null | head -1 | xargs eslint 2>/dev/null || echo 'No TypeScript files to lint'",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Testing utilities, mocks, and factories for TalePick",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@talepick/shared": "^1.0.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "vitest": "^4.0.15",
    "prettier": "^3.7.4"
  }
}
